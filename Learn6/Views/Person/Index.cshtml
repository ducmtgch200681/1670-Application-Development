@model List<Person> 

<div class="container col-md-8 text-center mt-3">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th colspan="5">Person List</th>
                <th><a class="btn btn-danger" asp-controller="Person" asp-action="Add">Add more</a></th>
            </tr>
            <tr>
                <th>No.</th>
                <th>Name</th>
                <th>Age</th>
                <th>Telephone</th>
                <th>Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var person in Model)
            {
                <tr>
                    <td>@(Model.IndexOf(person)+1)</td>
                    <td>@person.Name</td>n 
                    <td>@person.Age</td>
                    <td>@person.Tele</td>
                    <td><img src="@person.Image" width=100% height=100%></td>
                    <td>
                        <form method="getm" asp-controller="Person" asp-action="Edit">
                            <input type="hidden" name="id" value="@Model.IndexOf(person)">
                            <input class="btn btn-warning" type="submit" value="Edit">
                        </form>
                        <form method="post" asp-controller="Person" asp-action="Delete">
                            <input type="hidden" name="id" value="@Model.IndexOf(person)">
                            <input class="btn btn-primary" type="submit" value="Delete">
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>