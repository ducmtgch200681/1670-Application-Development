@model List<Student>

@{
    Layout = "~/Views/Shared/UserLayout.cshtml";
    var total_student = Model.Count;
    var sum_grade = 0.0;
}

<div class="container col-md-8 text-center">
    <h1>Total students: @total_student</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Student Id</th>
                <th>Student Name</th>
                <th>Student Age</th>
                <th>Student Grade</th>
                <th>Student Image</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Id</td>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Grade</td>
                    <td><img src="@student.Image" width="100%" height="100%"/></td>
                </tr>
                <p hidden>@(sum_grade += student.Grade)</p>
            }
        </tbody>
    </table>
    <h1>Average grade : @(sum_grade/total_student)</h1>
</div>